<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarjetaHabPlanta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/borde_layout">
        <TextView
            android:id="@+id/numHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="#000000"
            android:text="HabitaciÃ³n X"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/imagenHab"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/detallesGenerales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Deluxe   Precio: $xxx"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btnVerMas"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:backgroundTint="#00D2C4"
            android:layout_marginRight="10dp"
            android:text="@string/verMas"
            android:textColor="#000000"
            android:textSize="10dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#94000000"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>