<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistasUsuarios.ticketReservacion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/siestaLuna"
            android:layout_width="189dp"
            android:layout_height="61dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/siestaluna" />
        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="1.2in"
            android:layout_height="1.2in"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/cheque"/>

        <TextView
            android:id="@+id/tvConfirmacion"
            android:layout_width="2in"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="@string/confirmacion"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/tvFechaIngreso"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvNumHabitacion"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvImportante"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Importante:"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvINE"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Presentar su INE al ingresar al hotel:"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/btnRegresar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#00D2C4"
            android:text="@string/regresar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:strokeColor="#94000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>